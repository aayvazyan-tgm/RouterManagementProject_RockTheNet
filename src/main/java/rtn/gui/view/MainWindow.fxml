<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar fx:id="menu_mb" BorderPane.alignment="CENTER">
        <menus>
            <Menu fx:id="app_m" mnemonicParsing="false" text="Application">
              <items>
                <MenuItem fx:id="device_mi" mnemonicParsing="false" text="Change Device" />
              </items>
            </Menu>
          <Menu fx:id="rules_m" mnemonicParsing="false" text="Rules">
            <items>
              <MenuItem fx:id="refresh_mi" mnemonicParsing="false" text="Refresh">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="F5" control="UP" meta="UP" shift="UP" shortcut="ANY" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem fx:id="auto_mi" mnemonicParsing="false" text="Set Auto-Refresh ..." />
                  <MenuItem fx:id="graph_mi" mnemonicParsing="false" text="Display in Graph">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem fx:id="change_mi" mnemonicParsing="false" text="Change Rule">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
            <Menu fx:id="graph_m" mnemonicParsing="false" text="Graph">
              <items>
                <MenuItem fx:id="max_mi" mnemonicParsing="false" text="Set Max Items ..." />
              </items>
            </Menu>
            <Menu fx:id="help_m" mnemonicParsing="false" text="Help">
              <items>
                <MenuItem fx:id="help_mi" mnemonicParsing="false" text="Help">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem fx:id="guide_mi" mnemonicParsing="false" text="Guide">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabs_tp" prefHeight="200.0" prefWidth="200.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" tabMinHeight="40.0" BorderPane.alignment="CENTER">
        <tabs>
          <Tab>
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TableView fx:id="rules_table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                          <columns>
                            <TableColumn fx:id="rule_column" prefWidth="75.0" text="Rule" />
                            <TableColumn prefWidth="75.0" text="Value #1" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </center>
                  </BorderPane>
               </content>
               <graphic>
                  <Label text="Rules" />
               </graphic>
          </Tab>
          <Tab>
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                  	<center>
                  		<LineChart fx:id="graph_lc" BorderPane.alignment="CENTER">
                  			<xAxis>
                  				<CategoryAxis side="BOTTOM" />
                  			</xAxis>
                  			<yAxis>
                  				<NumberAxis side="LEFT" />
                  			</yAxis>
                  		</LineChart>
                  	</center>
                  	<bottom>
                  		<FlowPane fx:id="items_fp" hgap="10.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                  			<children>
                  				<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                  					<left>
                  						<Button mnemonicParsing="false" text="X" BorderPane.alignment="CENTER" />
                  					</left>
                  					<center>
                  						<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rule Name" BorderPane.alignment="CENTER" />
                  					</center>
                  				</BorderPane>
                  			</children>
                  		</FlowPane>
                  	</bottom>
                  </BorderPane>
               </content>
               <graphic>
                  <Label text="Graph" />
               </graphic>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
